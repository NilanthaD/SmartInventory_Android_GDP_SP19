<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditItem">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemIdTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Edit Item" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            <ImageView
                android:id="@+id/editImgeIV"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="Item Name :"/>
                
                <EditText
                    android:id="@+id/itemNameET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Item Name"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Description :"/>

                <EditText
                    android:id="@+id/descriptionET"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:hint="Description"
                    android:gravity="top"
                    android:background="@drawable/boder"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buying Price : $"/>

                <EditText
                    android:id="@+id/buyingPriceET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Buying Price"
                    android:inputType="number"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quentity Needed :"/>

                <EditText
                    android:id="@+id/qntityNeededET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Quentity Needed"
                    android:inputType="number"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Required By :"/>

                <EditText
                    android:id="@+id/requiredByET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"/>
                <ImageButton
                    android:id="@+id/dateBTN"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:src="@drawable/calendar"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/saveChangesBTN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save changes"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/cancelTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:layout_margin="10dp"
                        android:paddingTop="10dp"
                        android:textColor="#00F"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>